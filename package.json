{
  "name": "sales-order-maintenance",
  "version": "1.0.0",
  "description": "Projeto para estudo relacionado à criação de uma aplicação para gerenciamento de ordens de venda utilizando SAP Cloud Application Programming Model (CAP), SAP HANA Cloud e Node.js",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "engines": {
    "node": "^16"
  },
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run --profile production"
  },
  "cds": {
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite"
        }
      }
    },
    "[production]": {
      "requires": {
        "db": {
          "kind": "hana"
        },
        "uaa": {
          "kind": "xsuaa",
          "credentials": {}
        },
        "auth": {
          "passport": {
            "strategy": "JWT"
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}